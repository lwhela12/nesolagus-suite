# Database
DATABASE_URL=postgresql://ghac_user:ghac_password@localhost:5433/ghac_survey
REDIS_URL=redis://localhost:6380

# Backend
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Frontend
REACT_APP_API_URL=http://localhost:3001

# VideoAsk Integration (to be provided)
VIDEOASK_API_KEY=your_videoask_api_key
VIDEOASK_WEBHOOK_SECRET=your_webhook_secret

# Google Drive Integration (to be provided)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
GHAC_DRIVE_FOLDER_ID=your_drive_folder_id

# Security
# In development, all localhost origins are allowed automatically
# In production, specify allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:4000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Admin Authentication (OPTIONAL - only needed for admin panel access)
# The survey itself works fine without this
# Get your key from: https://dashboard.clerk.com/last-active?path=api-keys
VITE_CLERK_PUBLISHABLE_KEY=