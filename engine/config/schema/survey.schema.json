{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Survey Engine Survey Configuration",
  "description": "Configuration for survey structure, questions, and flow",
  "type": "object",
  "required": ["survey", "blocks"],
  "properties": {
    "survey": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
          "description": "UUID for the survey"
        },
        "name": {
          "type": "string",
          "description": "Survey name"
        },
        "description": {
          "type": "string",
          "description": "Survey description"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "estimatedMinutes": {
              "type": "number"
            },
            "targetAudience": {
              "type": "string"
            }
          }
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name", "blocks"],
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "blocks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "blocks": {
      "type": "object",
      "description": "Map of block IDs to block configurations",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "video-autoplay",
              "videoask",
              "quick-reply",
              "message-button",
              "text-input",
              "text-input-followup",
              "single-choice",
              "multi-choice",
              "scale",
              "mixed-media",
              "semantic-differential",
              "ranking",
              "yes-no",
              "contact-form",
              "demographics",
              "final-message",
              "dynamic-message"
            ]
          },
          "content": {
            "type": "string"
          },
          "next": {
            "type": "string",
            "description": "ID of next block"
          },
          "conditionalNext": {
            "type": "object",
            "description": "Conditional branching logic"
          },
          "options": {
            "type": "array",
            "description": "Options for choice-based questions"
          },
          "variable": {
            "type": "string",
            "description": "Variable name to store answer"
          },
          "autoAdvance": {
            "type": "boolean"
          },
          "autoAdvanceDelay": {
            "type": "number"
          }
        }
      }
    }
  }
}
